{
    "version": 2,
    "builds": [
      {
        "src": "frontend",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "backend",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/frontend/assets/$1"
      },
      {
        "src": "/(.*).(js|css|ico)",
        "dest": "/frontend/$1.$2"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/index.html"
      }
    ]
  }
  